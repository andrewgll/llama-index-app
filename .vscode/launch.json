{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Attach to app",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": false,
            "connect": {
                "host": "0.0.0.0",
                "port": 5001
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "justMyCode": false,
            "request": "launch",
            "program": "${file}"
        }
    ]
}